@model List<LibreriaV6.Modelo.TLibro>

@{
    ViewBag.Title = "Carro";
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Carrito</title>
</head>
<body>
    <div class="container-fluid p-2">
        <div class="row">
            <div class="col-12"><p class="text-left alert alert-success" role="alert"><span id="mensaje"></span></p></div>
            <div class="col-12 col-md-7 order-1 order-md-0">
                <table class="table table-hover text-center">
                    <thead class="bg-dark text-light">
                        <tr>
                            <td></td>
                            <td>Título</td>
                            <td>Autor</td>
                            <td>Añadir</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var libro in Model) {
                            <tr>
                                <td><img src="@libro.Imagen" width="70" height="70" /></td>
                                <td>@libro.Titulo</td>
                                <td>@libro.Autor</td>
                                <td>
                                    @Ajax.ActionLink("Añadir carro", "obtenerLibros", "Libro", new { CodLibro = libro.CodLibro }, new AjaxOptions() {
                                        HttpMethod = "POST",
                                        OnSuccess = "success",
                                    }, new { @class = "btn btn-outline-primary" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="col-12 col-md-5 order-0 order-md-1 mb-3">
                <div class="row">
                    <div class="col-12">
                        <table class="table table-hover text-center">
                            <thead class="bg-dark text-light">
                                <tr>
                                    <td colspan="5"><i class="fas fa-shopping-cart"></i>CARRITO</td>
                                </tr>
                                <tr>
                                    <td>Cantidad</td>
                                    <td>Título</td>
                                    <td>Autor</td>
                                    <td>Precio</td>
                                    <td>Borrar</td>
                                </tr>
                            </thead>
                            <tbody id="carrito"></tbody>
                        </table>
                    </div>
                    <div class="col-6 text-right pr-2">
                        <p>Total: <b><span id="total"></span>&euro;</b></p>
                    </div>
                    <div class="col-6 text-left pl-2">
                        <input id="botonEnviar" type="button" value="Comprar" onclick="comprar()" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Content/js/CarroCompra.js"></script>
</body>
</html>